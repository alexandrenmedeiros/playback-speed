{
    "manifest_version": 2,
    "name": "Video4Speed",
    "version": "1.1.0",
    "homepage_url": "https://github.com/alexandrenmedeiros/playback-speed",

    "description": "Add a video playback speed controler for any html 5 video",
    "icons": {
        "48": "icons/baseline_shutter_speed_black_24dp.png"
    },

    "permissions": [
        "activeTab"
    ],

    "browser_action": {
        "default_icon": "icons/baseline_shutter_speed_white_18dp.png",
        "theme_icons": [{
            "light": "icons/baseline_shutter_speed_white_18dp.png",
            "dark": "icons/baseline_shutter_speed_black_18dp.png",
            "size": 32
        }],
        "default_title": "Video4Speed",
        "default_popup": "popup/index.html"
    }
}